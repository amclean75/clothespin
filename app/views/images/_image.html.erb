<div class="image">
	<%= link_to image_tag(image.image.url, class: 'media-object'), image.image.url, target: '_blank' %>
		<p>by <%= link_to image.user.username, profile_user_path(image.user.username) %> | <%= link_to "show", image %></p>
		<% if current_user and current_user == image.user %>
			<p><%= link_to 'Delete', image_path(image), :method => :delete %></p>
		<% end %>
		
</div>
	